<h2>Volunteer Name: <%= @volunteer.name %></h2>

<form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Update Volunteer</label>
  <label for="definition">Edit your volunteer here:</label>
  <input id="name" name="name" class="form-control" type="text" placeholder="Name">
  <button type="submit">Update Volunteer</button>
</form>

