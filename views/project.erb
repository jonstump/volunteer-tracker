  <% if @volunteers.any? %>
  <ul>
    <% @volunteers.each do |volunteer| %>
      <li><a href="/volunteer/<%= volunteer.id %>"><%= volunteer.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no volunteers for this project. </p>
<% end %>

<br>
<a href="/projects/<%= @project.id %>/edit">Edit Project</a><br>

<h4>Add a new volunteer!</h4>
<form action="/projects/<%= @project.id %>" method="post">
  <div class="form-group">
    <label for="name">Name:</label>
    <input id="name" name="name" class="form-control" type="text" placeholder="Volunteer's Name">
  </div>
  <button type="submit" class="btn">Add Volunteer</button>
</form>
